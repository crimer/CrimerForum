@model CrimerForum.VM.Forum.ForumTopicVM
@{
    ViewData["Title"] = @Model.Forum.Title;
}
<div>
    <h1>@Model.Forum.Title</h1>
    <p>@Model.Forum.Description</p>
    <div class="image-wrapper">
        <img src="/images/@Model.Forum.ImageUrl" alt="@Model.Forum.Title - forum " />

    </div>
    <br />
    <a class="btn btn-success" asp-action="Create" asp-controller="Post" asp-route-id="@Model.Forum.Id">
        Создать новый пост
    </a>
    <br />
    @if (!Model.Posts.Any())
    {
        <div>
            <h3>Похоже что на эту тему нет постов</h3>
            <p>
                Так почему бы не создать?
            </p>
        </div>
    }
    else
    {
        <div class="topicsList">
            <ul class="list-group">
                @foreach (var post in Model.Posts)
                {
                    <li class="list-group-item">
                        <h2>
                            <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">@post.Title</a>
                        </h2>
                        <p>Автор: @post.AuthorName</p>
                        <p>Дата создания: @post.CreatedAt</p>
                        <p>Кометнарии: @post.RepliesCount</p>
                    </li>
                }

            </ul>
        </div>
    }
</div>